{
    "compilerOptions": {
      "module": "ESNext", 
      "moduleResolution": "Node",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["tests/**/*.ts", "utils/**/*.ts"]
  }
  